{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    // Linting
    "strict": true,
    "noUnusedLocals": false, // TEMP
    "noUnusedParameters": false, // TEMP
    "noFallthroughCasesInSwitch": true,
    // Others
    "paths": {
      "#/assets/*": ["./src/assets/*"],
      "#/config/*": ["./src/config/*"],
      "#/utils/*": ["./src/utils/*"],
      "#/app/*": ["./src/features/app/*"],
      "#/core/*": ["./src/features/core/*"],
      "#/base/*": ["./src/features/base/*"],
      "#/static/*": ["./src/features/static/*"],
      "#/auth/*": ["./src/features/auth/*"],
      "#/user/*": ["./src/features/user/*"],
      "#/dashboard/*": ["./src/features/dashboard/*"],
      "#/school-year/*": ["./src/features/school-year/*"],
      "#/lesson/*": ["./src/features/lesson/*"],
      "#/exam/*": ["./src/features/exam/*"],
      "#/activity/*": ["./src/features/activity/*"],
      "#/performance/*": ["./src/features/performance/*"],
      "#/help/*": ["./src/features/help/*"],
      "#/schedule/*": ["./src/features/schedule/*"],
      "#/announcement/*": ["./src/features/announcement/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
